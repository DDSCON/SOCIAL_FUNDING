<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
	<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<title>결제 완료</title>
<jsp:include page="../main/header.jsp"></jsp:include>

<style type="text/css">
.main{
padding: 50px 50px 50px 50px;
}

.op1{
padding: 10px 10px 10px 10px;
margin: 10px 10px 10px 10px;
border-radius: 5px;
margin-bottom: 10px;
vertical-align: middle;
line-height: 50px;

}


.project_image {

	width: 300px;
	height: auto;
	border: 1px solid black;
	
}

</style>

</head>
<body>
	<jsp:include page="../main/top.jsp"></jsp:include>

	<div class="main" align="center">

		<div>
			옵션 선택 > 결제 > <font color="red">결제 완료</font> 
		</div>

			
			<div class="op1" align="center" style="width: 400px; background: #f9f9f7;">
			축하합니다!<br>
			
				<c:forEach var="selectedproject" items="${mains}">
				[${selectedproject.title}] 프로젝트에
				
			
			
			<% String creditcard =  request.getParameter("unitprice");
			      
			   if (creditcard == null) {
				   int paypalint = (int)(Float.parseFloat(request.getParameter("payment_gross"))*1000F);
				   String paypal = Integer.toString(paypalint);	
				   out.print(paypal);
			   } else {
				   out.print(creditcard);
			   }
			%>원을 후원하셨습니다
					
			<br> <img src="/resources/upload/${selectedproject.image}" class="project_image" />
			<br> ${selectedproject.blurb}<br>선택한 옵션: <%=request.getParameter("o_description") %>
			<br><br>프로젝트 진행률바<br>	

			</c:forEach>
			
		</div>

			</div>

				
				<input type=hidden name="p_seq" value="<%=request.getParameter("seq") %>"/>


	<jsp:include page="../main/footer.jsp"></jsp:include>

</body>
</html>