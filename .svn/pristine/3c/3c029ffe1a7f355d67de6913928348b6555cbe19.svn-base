<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
	<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<title>결제 완료</title>
<jsp:include page="../main/header.jsp"></jsp:include>

<style type="text/css">
.main{
padding: 50px 50px 50px 50px;
}

.op1{
padding: 10px 10px 10px 10px;
margin: 10px 10px 10px 10px;
border-radius: 5px;
margin-bottom: 10px;
vertical-align: middle;
line-height: 50px;

}


.project_image {

	width: 300px;
	height: auto;
	border: 1px solid black;
	
}

td {
    padding: 10px;
    margin: 10px;
}

</style>

</head>
<body>
	<jsp:include page="../main/top.jsp"></jsp:include>

	<div class="main" align="center">

		<div>
			옵션 선택 > 결제 > <font color="red">결제 완료</font> 
		</div>

			
			<div class="op1" align="center" style="width: 800px; background: white;">

			
			<table>
			<tr><td colspan="2">
						
				<c:forEach var="selectedproject" items="${mains}">
				축하합니다! [${selectedproject.title}] 프로젝트에	${sessionScope.pay_money}원을 후원하셨습니다
			</td></tr>
			
			<tr>
			<td>
			
			 <img src="/resources/upload/${selectedproject.image}" class="project_image" />
			
			
			</td>
			<td>
			${selectedproject.blurb}<br>선택한 옵션: ${sessionScope.o_description}
			</c:forEach>
			
			
				<c:forEach var="map" items="${projectdata}">
				
					<div class="funded-status">
								&#8361;${map.funded_money}/&#8361;${map.f_goal_money}</br>
								${100*map.funded/map.f_goal}%
							</div>
							<div class="stat">
								<span style="width: ${100*map.funded/map.f_goal}%;"></span>
							</div>
							<div class="funded-people">${map.count}명 후원중</div>
				
				
				
				</c:forEach>
	
			
			
			
			</td>
			</tr>
			
			
			
			
			</table>
			
			
			
		</div>

</div>


	<jsp:include page="../main/footer.jsp"></jsp:include>

</body>
</html>